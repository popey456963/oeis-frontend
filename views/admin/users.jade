extends admin_layout

block content
    .container-fluid
      .row
        .col-xs-12.col-sm-10.col-sm-offset-1.col-md-10.col-md-offset-1.col-lg-10.col-lg-offset-1
          .panel
            .panel-body
              .container-fluid
                #error.hidden.alert.alert-danger(role='alert')
              h3 List of OEIS Users
              for user in users
                .col-md-6.col-lg-6
                  fieldset.userFieldset
                    legend.userLegend
                      input(type='checkbox').userCheckbox
                      a.userLink(href='#')= user.name
                    .userProfile
                      img(src=user.gravatar, width='80', height='80')
                    .userDetails
                      for value, item in user
                        if item == "joined" || item == "email" || item == "last_active" || item == "contributions"
                          span #[strong #{item}: ] #{value}
                          br