extends admin_layout

block content
  .container-fluid
    .row
      .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-8.col-lg-offset-2
        .panel
          .panel-body
            .container-fluid
              #error.hidden.alert.alert-danger(role='alert')
            h3 Statistics

            h4 Most Popular Pages:

            for page in popularPages
              span #[b #{page['page']}: ] #{page['totalViews']}
              br

            br

            h4 Active Users:
            ul
              for user in activeUsers
                li #[b #{user['name']}]

            h4 Latest Viewed Pages:
            ol
              for page in latestPages
                li #[b #{page['page']}]

            h4 Latest Changes:
            ol
              for change in latestChanges
                li The sequence #[b #{change['id']}] was #{change['change']}.
